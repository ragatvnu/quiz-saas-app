:root {
  --bg: #0f172a; --card: #111827; --muted: #1f2937; --text: #e5e7eb; --accent: #60a5fa; --grid: #0b1020;
}
.btn { cursor:pointer; background: var(--accent); color:#0b1020; border:none; padding:10px 14px; border-radius: 999px; font-weight:600; }
.btn.secondary { background: var(--muted); color: var(--text); }
.btn.ghost { background: transparent; border:1px solid #334155; color: var(--text); }
.pp-grid {
  display: grid; gap: 2px; background: var(--grid);
  padding: 6px; border-radius: 12px; border: 1px solid #1f2937;
  box-shadow: inset 0 0 0 1px rgba(255,255,255,0.02);
}
.pp-cell {
  width: 44px; height: 44px; display: grid; place-items: center;
  font-weight: 800; font-size: 18px; background: #111827; color: var(--text);
  border-radius: 6px;
}
.pp-cell.wrong { background: rgba(239,68,68,.15); }
.pp-cell.correct { background: rgba(16,185,129,.15); }
.pp-cell.fixed { color: #a7f3d0; }
